---
import Layout from "../../../layouts/Layout.astro";
---

<Layout title="Learnovate">
<div class="container">
      <!-- register form start -->
     <div class="container mt-5" id="register">
        <div class="row ">
          <div class="col-sm-12 col-md-6 mx-auto">
            <div class=" p-3">
              <h2 class="text-center">Student Basic Information</h2>
            </div>
            <form class="mt-3">
              <div class="mb-3">
                <!-- <label for="name" class="form-label">Name</label> -->
                <input type="text" name="fname" class="form-control p-3 ps-4 rounded-5 fs-5" style="" id="fname" placeholder="First name" required>
              </div>
  
              <div class="mb-3">
                <!-- <label for="InputEmail1" class="form-label">Email address</label> -->
                <input type="text" name="mname" class="form-control p-3 ps-4 rounded-5 fs-5" id="mname" placeholder="Middle name" required>
              </div>
              <div class="mb-3">
                <!-- <label for="InputEmail1" class="form-label">Email address</label> -->
                <input type="text" name="lname" class="form-control p-3 ps-4 rounded-5 fs-5" id="lname" placeholder="Last name" required>
              </div>
              <div class="input-group"> 
                <select class="form-select p-3 ps-4 rounded-5 fs-5" id="inputGroupSelect04"  aria-label="Example select with button addon">
                  <option selected>Gender</option>
                  <option value="1">Male</option>
                  <option value="2">Female</option>
                  <option value="3">Other</option>
                </select>
              </div>
              <div class="mb-3 pt-3">
                <!-- <label for="InputEmail1" class="form-label">Email address</label> -->
                <input type="date" name="" class="form-control p-3 ps-4 rounded-5 fs-5" id="date" placeholder="date of birth" required>
              </div>
              <div class="input-group mb-3">
                <!-- <span class="input-group-text" id="basic-addon1">@</span> -->
                <input type="text" class="form-control p-3 ps-4 rounded-5 fs-5" placeholder="Email" aria-label="Email" aria-describedby="basic-addon1" required>
              </div>

              <div class="input-group">
                <select class="form-select p-3 ps-4 rounded-5 fs-5" id="inputGroupSelect04" aria-label="Example select with button addon">
                  <option selected>Country</option>
                  <option value="1">One</option>
                  <option value="2">Two</option>
                  <option value="3">Three</option>
                </select>
              </div>

              <div class="input-group pt-3">
                <select class="form-select p-3 ps-4 rounded-5 fs-5" id="inputGroupSelect04" aria-label="Example select with button addon">
                  <option selected> Country Code</option>
                  <option value="1">One</option>
                  <option value="2">Two</option>
                  <option value="3">Three</option>
                </select>
              </div>
              <div class="mb-3 pt-3">
                <!-- <label for="InputEmail1" class="form-label">Email address</label> -->
                <input type="text" name="lname" class="form-control p-3 ps-4 rounded-5 fs-5" id="lname" placeholder="Phone" required>
              </div>
            </div>
            </form>
          </div>
        </div>
        <hr>
        <div class="row ">
            <div class="col-sm-12 col-md-6 mx-auto">
              <div class=" p-3">
                <h2 class="text-center">Parents/Guardian Details</h2>
              </div>
              <form class="mt-3">
                <div class="mb-3">
                  <!-- <label for="name" class="form-label">Name</label> -->
                  <input type="text" name="fname" class="form-control p-3 ps-4 rounded-5 fs-5" id="fname" placeholder="First name" required>
                </div>
    
                <div class="mb-3">
                  <!-- <label for="InputEmail1" class="form-label">Email address</label> -->
                  <input type="text" name="mname" class="form-control p-3 ps-4 rounded-5 fs-5" id="mname" placeholder="Middle name" required>
                </div>

                <div class="input-group">
                  <select class="form-select p-3 ps-4 rounded-5 fs-5" id="inputGroupSelect04" aria-label="Example select with button addon">
                    <option selected>Country</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                  </select>
                </div>
                <div class="mb-3 pt-3">
                    <!-- <label for="InputEmail1" class="form-label">Email address</label> -->
                    <input type="text" name="lname" class="form-control p-3 ps-4 rounded-5 fs-5" id="lname" placeholder="Phone (Preferably WhatsApp)" required>
                  </div>
             </div>
              </form>
            </div>
          </div>
      </div>
      <hr>
      <div class="row ">
        <div class="col-sm-12 col-md-6 mx-auto">
          <div class=" p-3">
            <h2 class="text-center">Permanent Address</h2>
          </div>
          <form class="mt-3">
            <div class="input-group pb-3">
                <select class="form-select p-3 ps-4 rounded-5 fs-5" id="inputGroupSelect04" aria-label="Example select with button addon">
                  <option selected>Country</option>
                  <option value="1">Canada</option>
                  <option value="2">USA</option>
                  <!-- <option value="3">Three</option> -->
                </select>
              </div>
            <div class="mb-3">
              <!-- <label for="InputEmail1" class="form-label">Email address</label> -->
              <input type="text" name="mname" class="form-control p-3 ps-4 rounded-5 fs-5" id="mname" placeholder="State" required>
            </div>
            <div class="mb-3">
                <!-- <label for="InputEmail1" class="form-label">Email address</label> -->
                <input type="text" name="lname" class="form-control p-3 ps-4 rounded-5 fs-5" id="lname" placeholder="City" required>
            </div>
            <div class="mb-3">
                <!-- <label for="InputEmail1" class="form-label">Email address</label> -->
                <input type="text" name="lname" class="form-control p-3 ps-4 rounded-5 fs-5" id="lname" placeholder="0000" required>
            </div>
            <div class="mb-3">
                <!-- <label for="InputEmail1" class="form-label">Email address</label> -->
                <input type="text" name="lname" class="form-control p-3 ps-4 rounded-5 fs-5" id="lname" placeholder="Address" required>
            </div>
         </div>
          </form>
        </div>
        <hr>
        <div class="row ">
            <div class="col-sm-12 col-md-6 mx-auto">
              <div class=" p-3">
                <h2 class="text-center">Passport Details</h2>
              </div>
              <form class="mt-3">
                <div class="mb-3">
                  <!-- <label for="InputEmail1" class="form-label">Email address</label> -->
                  <input type="text" name="mname" class="form-control p-3 ps-4 rounded-5 fs-5" id="mname" placeholder="Name" required>
                </div>
                <div class="mb-3">
                    <!-- <label for="InputEmail1" class="form-label">Email address</label> -->
                    <input type="text" name="lname" class="form-control p-3 ps-4 rounded-5 fs-5" id="lname" placeholder="0000" required>
                </div>
                <div class="mb-3">
                    <!-- <label for="InputEmail1" class="form-label">Email address</label> -->
                    <input type="text" name="lname" class="form-control p-3 ps-4 rounded-5 fs-5" id="lname" placeholder="Govt.Recognition" required>
                </div>
                <div class="mb-3">
                    <!-- <label for="InputEmail1" class="form-label">Email address</label> -->
                    <input type="date" name="" class="form-control p-3 ps-4 rounded-5 fs-5" id="date" placeholder="date of birth" required>
                  </div>
                <div class="input-group pb-3">
                    <select class="form-select p-3 ps-4 rounded-5 fs-5" id="inputGroupSelect04" aria-label="Example select with button addon">
                      <!-- <option selected>Country</option> -->
                      <option value="1">+1</option>
                      <option value="2">+91</option>
                      <!-- <option value="3">Three</option> -->
                    </select>
                </div>
                <div class="pt-4">
                    <h3 class="text-center">Citizenship number</h3>
                    <div class="mb-3 pt-3">
                        <!-- <label for="InputEmail1" class="form-label">Email address</label> -->
                        <input type="text" name="lname" class="form-control p-3 ps-4 rounded-5 fs-5" id="lname" placeholder="CitizenshipNumber" required>
                    </div>
                </div>
             </div>
              </form>
            </div>
    <!-- register form end -->
</div>
</Layout>
